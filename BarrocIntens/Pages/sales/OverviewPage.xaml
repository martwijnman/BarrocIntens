<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Bill.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Bill"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    mc:Ignorable="d">

    <Grid>
        <ListView x:Name="BillListView"
                  IsItemClickEnabled="True"
                  >
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <StackPanel x:Name="detailSelectorBarItem">
                        <TextBlock Text="{x:Bind Name }"  />
                        <TextBlock Text="{x:Bind Price }" />
                        <TextBlock Text="{x:Bind StockShortage }" /> <!-- minimum - stock doen -->
                        <TextBlock Text="{x:Bind Deliverer }" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
