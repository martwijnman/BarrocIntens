<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>


    <Grid Background="#1E1E1E">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
        x:Name="Greeting"
        FontSize="32"
        FontWeight="SemiBold"
        Margin="40"
        Foreground="White"/>

        <Grid Grid.Row="1" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="880"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Knoppen -->
                <RowDefinition Height="*"/>
                <!-- Chart -->
            </Grid.RowDefinitions>
            <TextBlock x:Name="greetingText" />
            <Grid Grid.Row="1" Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- PLANNING -->
                <Button x:Name="PlanningButton"
            Grid.Row="0" Grid.Column="0"
            Width="150" Height="150"
            Margin="10"
            Click="PlanningClick">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE787;" FontSize="50"/>
                        <TextBlock Text="Planning" FontSize="17" Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>

                <!-- CUSTOMER -->
                <Button x:Name="CustomerButton"
            Grid.Row="0" Grid.Column="1"
            Width="150" Height="150"
            Margin="10"
            Click="linkdiewerkt">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE77B;" FontSize="50"/>
                        <TextBlock Text="Klant" FontSize="17" Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>

                <!-- EMPLOYEE -->
                <Button x:Name="EmployeeButton"
            Grid.Row="0" Grid.Column="2"
            Width="150" Height="150"
            Margin="10"
            Click="EmployeeClick">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE125;" FontSize="50"/>
                        <TextBlock Text="Werknemer" FontSize="17" Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>

                <!-- VERKOOP -->
                <Button x:Name="SalesButton"
            Grid.Row="1" Grid.Column="0"
            Width="150" Height="150"
            Margin="10"
            Click="ProductClick">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE7BF;" FontSize="50"/>
                        <TextBlock Text="Verkoop" FontSize="17" Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>

                <!-- CONTRACTEN -->
                <Button x:Name="ContractButton"
            Grid.Row="1" Grid.Column="1"
            Width="150" Height="150"
            Margin="10">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE8A5;" FontSize="50"/>
                        <TextBlock Text="Contracten" FontSize="17" Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>

                <!-- MONTEURS -->
                <Button x:Name="MonteurButton"
            Grid.Row="1" Grid.Column="2"
            Width="150" Height="150"
            Margin="10"
            Click="MonteurClick">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE822;" FontSize="50"/>
                        <TextBlock Text="Monteurs" FontSize="17" Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>


        </Grid>


        <lvc:CartesianChart
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Width="600"
            Grid.Row="1" 
            Grid.Column="3"
            x:Name="SalesChart"
            Height="300"
            Series="{x:Bind SalesSeries, Mode=OneWay}"
            Background="#1E1E1E"/>

        </Grid>
    </Grid>
</Page>
