<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Settings.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    mc:Ignorable="d">

    <StackPanel Background="Black" Padding="20" >
        <!-- Titel -->
        <TextBlock FontSize="24" Foreground="Yellow" FontWeight="Bold" Margin="0,0,0,20">
        Instellingen
        </TextBlock>

        <!-- Wachtwoord sectie -->
        <StackPanel Margin="0,0,0,20">
            <PasswordBox
            x:Name="Current_Password"
            Header="Huidige wachtwoord"
            Background="Black"
            Foreground="White"
            BorderBrush="Yellow"
            Margin="0,0,0,10"
            Padding="5"/>

            <PasswordBox
            x:Name="New_Password"
            Header="Nieuwe wachtwoord"
            Background="Black"
            Foreground="White"
            BorderBrush="Yellow"
            Margin="0,0,0,10"
            Padding="5"/>

            <TextBlock x:Name="errorText" Foreground="Red" Margin="0,0,0,10"/>

            <Button
            Content="Opslaan Wachtwoord"
            Click="ChangePassword_Button"
            Background="Yellow"
            Foreground="Black"
            Padding="10,5"
            BorderThickness="0"
            Margin="0,0,0,10"
            FontWeight="Bold"/>
        </StackPanel>

        <!-- Uitloggen sectie -->
        <TextBlock FontSize="24" Foreground="Yellow" FontWeight="Bold" Margin="0,0,0,10">
        Uitloggen
        </TextBlock>

        <Button
        Content="Uitloggen"
        Click="Logout_Button"
        Background="Yellow"
        Foreground="Black"
        Padding="10,5"
        BorderThickness="0"
        FontWeight="Bold"/>
    </StackPanel>

</Page>
