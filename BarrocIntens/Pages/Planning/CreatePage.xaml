<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Planning.CreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Planning"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="NavigationViewItemForeground" Color="Black"/>
    </Page.Resources>

    <ScrollView  Width="1400">
        <StackPanel
            Spacing="20"
            >
            <DatePicker x:Name="date" Header="Date"  />
            <TextBox x:Name="PlanTextbox" Header="Plan" PlaceholderText="Plan" />
            <TextBox x:Name="LocationTextbox" Header="Location" PlaceholderText="Location" />
            <TextBox x:Name="DescriptionTextbox" Header="Description" PlaceholderText="Description" />
            <ComboBox x:Name="StatusCheckbox"
                  Header="Status"
                  PlaceholderText="Status selecteren"
                  Width="200">
                <x:String>Gedaan</x:String>
                <x:String>Niet Gedaan</x:String>
            </ComboBox>

            <StackPanel x:Name="CitizenSelector" Orientation="Horizontal" Spacing="8">
            </StackPanel>

            <TextBlock x:Name="errorText" />
            <Button Click="CreateButton">
                Save
            </Button>
        </StackPanel>
    </ScrollView>
</Page>
