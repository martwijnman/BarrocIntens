<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Planning.CreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Planning"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#0F0F0F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#0F0F0F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#0F0F0F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFD600"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <ScrollView  Width="1400">
        <StackPanel
            Spacing="20"
            Background="Black"
            >
            <DatePicker x:Name="date" Header="Date"  />
            <TextBox x:Name="PlanTextbox" Header="Plan" PlaceholderText="Plan" />
            <TextBox x:Name="LocationTextbox" Header="Location" PlaceholderText="Location" />
            <TextBox x:Name="DescriptionTextbox" Header="Description" PlaceholderText="Description" />
            <ComboBox x:Name="StatusCheckbox" Foreground="White"
                  Header="Status"
                  PlaceholderText="Status selecteren"
                  Width="200"
                      Background="LightGray">
                <x:String>Gedaan</x:String>
                <x:String>Niet Gedaan</x:String>
            </ComboBox>

            <ComboBox x:Name="CategoryCheckbox"
       Header="Status"
       PlaceholderText="Categorie selecteren"
       Width="200"
           Background="Black">

            <ListBox SelectionMode="Single"
            x:Name="EmployeesListBox"
            Grid.Row="3"
            Height="150"
            DisplayMemberPath="Name"
            SelectionChanged="EmployeesListBox_SelectionChanged"/>

                <x:String>Storing</x:String>
                <x:String>Vergadering</x:String>
                <x:String>Controle</x:String>
                <x:String>Adviesbezoek</x:String>
            </ComboBox>

            <!-- TITLE -->
            <TextBlock Text="Planning aanmaken"
                   FontSize="32"
                   FontWeight="SemiBold"
                   Foreground="#FFD600"/>

            <!-- FORM CARD -->
            <Border Background="#141414"
                CornerRadius="20"
                Padding="24">

                <StackPanel Spacing="22">

                    <DatePicker x:Name="date"
                            Header="Datum"/>

                    <TextBox x:Name="PlanTextbox"
                         Header="Plan"
                         PlaceholderText="Wat gaat er gebeuren?"/>

                    <TextBox x:Name="LocationTextbox"
                         Header="Locatie"
                         PlaceholderText="Waar vindt het plaats?"/>

                    <TextBox x:Name="DescriptionTextbox"
                         Header="Beschrijving"
                         PlaceholderText="Extra informatie"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="100"/>

                    <StackPanel Orientation="Horizontal"
                            Spacing="20">

                        <ComboBox x:Name="StatusCheckbox"
                              Header="Status"
                              Width="200"
                              PlaceholderText="Selecteer status">
                            <x:String>Gedaan</x:String>
                            <x:String>Niet gedaan</x:String>
                        </ComboBox>

                        <ComboBox x:Name="CategoryCheckbox"
                              Header="Categorie"
                              Width="220"
                              PlaceholderText="Selecteer categorie">
                            <x:String>Storing</x:String>
                            <x:String>Vergadering</x:String>
                            <x:String>Controle</x:String>
                            <x:String>Adviesbezoek</x:String>
                        </ComboBox>
                    </StackPanel>

                    <!-- CLIENTS -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Klanten"
                               Foreground="#FFD600"
                               FontWeight="SemiBold"/>
                        <StackPanel x:Name="CitizenSelector"
                                Orientation="Horizontal"
                                Spacing="8"/>
                    </StackPanel>

                    <!-- EMPLOYEES -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Werknemer"
                               Foreground="#FFD600"
                               FontWeight="SemiBold"/>
                        <StackPanel x:Name="EmployeeSelector"
                                Orientation="Horizontal"
                                Spacing="8"/>
                    </StackPanel>

                    <!-- ERROR -->
                    <TextBlock x:Name="errorText"
                           Foreground="#FF5C5C"
                           FontSize="13"/>

                    <!-- ACTION -->
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                        <Button Content="Opslaan"
                            Click="CreateButton"/>
                    </StackPanel>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollView>

</Page>
