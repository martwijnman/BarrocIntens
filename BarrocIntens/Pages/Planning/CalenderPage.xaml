<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Planning.CalenderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Planning"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    mc:Ignorable="d">


    <Grid Margin="15" Width="1400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- TOP BAR â€” maak deze zwart -->
        <Grid Grid.Row="0" Background="Black" Padding="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- COMBOBOX in de middelste kolom zodat hij zichtbaar en bereikbaar is -->
            <ComboBox x:Name="StatusCheckbox"
                  Grid.Column="1"
                  Header="Status"
                  PlaceholderText="Status selecteren"
                  Width="200"
                  Margin="10,0"
                  Foreground="White"
                  Background="Black"
                  SelectionChanged="FilterIfFinished">
                <x:String>Gedaan</x:String>
                <x:String>Niet Gedaan</x:String>
            </ComboBox>

            <!-- Rechterknop -->
            <Button x:Name="addCalendarItemButton"
                Padding="10"
                Foreground="White"
                Background="Black"
                Grid.Column="2"
                Click="AddCalendarItemButton_Click">
                Add Calendar
            </Button>
        </Grid>

        <!-- CalendarView blijft zoals voorheen -->
        <CalendarView x:Name="calendarView"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  CalendarItemBorderThickness="1"
                  CalendarItemCornerRadius="0"
                  HorizontalDayItemAlignment="Center"
                  VerticalDayItemAlignment="Top"
                  CalendarViewDayItemChanging="CalendarView_CalendarViewDayItemChanging">
            <CalendarView.CalendarViewDayItemStyle>
                <Style TargetType="CalendarViewDayItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <ListView ItemsSource="{Binding}"
                                      IsItemClickEnabled="True"
                                      ItemClick="DayItemListView_ItemClick">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Planning">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{x:Bind Plan}" FontWeight="Bold" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CalendarView.CalendarViewDayItemStyle>
        </CalendarView>
    </Grid>
</Page>
