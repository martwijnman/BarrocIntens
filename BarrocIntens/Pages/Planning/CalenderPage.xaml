<Page 
    x:Class="BarrocIntens.Pages.Planning.CalenderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Planning"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    mc:Ignorable="d">
    <StackPanel Background="#0B0B0B">

        <Grid Margin="24"
          Width="800">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TOP FILTER BAR -->
            <Border Grid.Row="0"
                Background="#141414"
                CornerRadius="18"
                Padding="16">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <ComboBox x:Name="StatusCheckbox"
                              PlaceholderText="Status"
                              Width="180"
                              Background="#0F0F0F"
                              Foreground="White"
                              BorderBrush="Transparent"
                              CornerRadius="10"
                              SelectionChanged="Filter_Changed"/>

                        <ComboBox x:Name="CategoryCheckbox"
                              PlaceholderText="Categorie"
                              Width="200"
                              Background="#0F0F0F"
                              Foreground="White"
                              BorderBrush="Transparent"
                              CornerRadius="10"
                              SelectionChanged="Filter_Changed"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                        Content="+ Planning"
                        Padding="18,10"
                        Background="#FFD600"
                        Foreground="Black"
                        FontWeight="SemiBold"
                        CornerRadius="12"
                        BorderThickness="0"
                        Click="AddCalendarItemButton_Click"/>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1"
              Margin="0,24,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CALENDAR -->
                <Border Grid.Column="0"
                    Background="#141414"
                    CornerRadius="22"
                    Padding="18"
                    Margin="0,0,20,0">

                    <CalendarView x:Name="calendarView"
                              Background="Transparent"
                              Foreground="White"
                              CalendarItemCornerRadius="10"
                              CalendarItemBorderThickness="0"
                              HorizontalDayItemAlignment="Center"
                              VerticalDayItemAlignment="Top"
                              Width="500"
                              CalendarViewDayItemChanging="CalendarView_CalendarViewDayItemChanging"/>
                </Border>

                <!-- TODAY PANEL -->
                <Border Grid.Column="1"
                    Background="#141414"
                    CornerRadius="22"
                    Padding="18">

                    <StackPanel Spacing="14">

                        <TextBlock Text="Vandaag"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                        <TextBlock Text="Geplande taken"
                               FontSize="13"
                               Foreground="#888888"
                               Margin="0,0,0,6"/>

                        <ListView x:Name="TodayPlanningListView"
                              Background="Transparent"
                              SelectionMode="Single">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="14"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                    <Setter Property="CornerRadius" Value="14"/>
                                    <Setter Property="Background" Value="#0F0F0F"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:Planning">
                                    <StackPanel Spacing="6">

                                        <TextBlock Text="{x:Bind Plan}"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               FontSize="15"/>

                                        <TextBlock Text="{x:Bind Date}"
                                               FontSize="12"
                                               Foreground="#AAAAAA"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                    </StackPanel>
                </Border>

            </Grid>

        </Grid>

    </StackPanel>

</Page>
