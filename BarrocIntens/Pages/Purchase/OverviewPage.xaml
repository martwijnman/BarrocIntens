<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Purchase.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Purchase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    Background="Black"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid Padding="40" Background="Black">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER ACTION -->
            <Button
                Content="+ Product"
                HorizontalAlignment="Right"
                Width="180"
                Height="48"
                CornerRadius="10"
                FontSize="16"
                FontWeight="SemiBold"
                BorderThickness="0"
                Background="#FFD600"
                Foreground="Black"
                Click="CreateProduct_Button"/>

            <!-- MAIN GRID -->
            <Grid Grid.Row="1" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="28">

                    <!-- Statistics -->
                    <Border
                        Background="#111"
                        CornerRadius="16"
                        Padding="20"
                        BorderBrush="#333"
                        BorderThickness="1">
                        <StackPanel Spacing="18">
                            <TextBlock
                                Text="Statistiek"
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="White"/>
                            <Border
                                Height="100"
                                Background="#FFD600"
                                CornerRadius="10"
                                Opacity="0.35"/>
                        </StackPanel>
                    </Border>


                    <!-- PRODUCT OVERVIEW -->
                    <Border
                        Background="#111"
                        CornerRadius="16"
                        Padding="22"
                        BorderBrush="#333"
                        BorderThickness="1">

                        <StackPanel Spacing="18">

                            <!-- Filter bar -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBox
                                    PlaceholderText="Zoek product..."
                                    Width="230"
                                    BorderBrush="#FFD600"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Foreground="White"
                                    Background="#000"/>

                                <ComboBox Width="150"
                                          Background="#000"
                                          Foreground="White"
                                          BorderBrush="#FFD600"
                                          CornerRadius="8">
                                    <ComboBoxItem Content="Stock"/>
                                    <ComboBoxItem Content="Naam"/>
                                    <ComboBoxItem Content="Leverancier"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Header -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Product" Foreground="#FFD600"/>
                                <TextBlock Text="Leverancier" Foreground="#FFD600" Grid.Column="1"/>
                                <TextBlock Text="Stock" Foreground="#FFD600" Grid.Column="2"/>
                                <TextBlock Text="Min" Foreground="#FFD600" Grid.Column="3"/>
                                <TextBlock Text="Status" Foreground="#FFD600" Grid.Column="4"/>
                            </Grid>

                            <!-- Product List -->
                            <ScrollViewer Height="170">
                                <StackPanel Spacing="8">

                                    <!-- Hardcoded example -->
                                    <Grid Padding="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Aparaat" Foreground="White"/>
                                        <TextBlock Text="XL Koffie B.V." Grid.Column="1" Foreground="White"/>
                                        <TextBlock Text="5" Grid.Column="2" Foreground="White"/>
                                        <TextBlock Text="20" Grid.Column="3" Foreground="White"/>
                                        <TextBlock Text="0" Grid.Column="4" Foreground="White"/>

                                        <Button
                                            Content="Bestel"
                                            Grid.Column="5"
                                            CornerRadius="6"
                                            Background="#FFD600"
                                            Foreground="Black"
                                            Padding="12,4"/>
                                    </Grid>

                                    <!-- Dynamic Product List -->
                                    <ListView x:Name="ProductListView">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="models:Product">
                                                <Grid Padding="4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="2"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{x:Bind Name}" Foreground="White"/>
                                                    <TextBlock Text="{x:Bind Deliverer.Name }" Grid.Column="1" Foreground="White"/>
                                                    <TextBlock Text="{x:Bind Stock}" Grid.Column="2" Foreground="White"/>
                                                    <TextBlock Text="{x:Bind MinimumStock}" Grid.Column="3" Foreground="White"/>
                                                    <TextBlock Text="{x:Bind NotificationSymbol}" Grid.Column="4" Foreground="{ x:Bind NotificationColor}"/>

                                                    <Button Content="Bestel"
                                                            Grid.Column="5"
                                                            CornerRadius="6"
                                                            Background="#FFD600"
                                                            Foreground="Black"
                                                            Padding="12,4"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                </StackPanel>
                            </ScrollViewer>

                        </StackPanel>
                    </Border>
                </StackPanel>


                <!-- SECOND COLUMN -->
                <StackPanel Grid.Column="1" Margin="30,0,0,0" Spacing="28">

                    <!-- MATERIALS -->
                    <Border
                        Background="#111"
                        Padding="22"
                        CornerRadius="16"
                        BorderBrush="#333"
                        BorderThickness="1">

                        <StackPanel Spacing="16">
                            <TextBlock
                                Text="Materialen bestellen"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Materiaal" Foreground="#FFD600"/>
                                <TextBlock Text="Stock" Grid.Column="1" Foreground="#FFD600"/>
                                <TextBlock Text="Min" Grid.Column="2" Foreground="#FFD600"/>
                                <TextBlock Text="Status" Foreground="#FFD600" Grid.Column="4"/>
                            </Grid>

                            <ScrollViewer Height="140">
                                <ListView x:Name="MatrialListView">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Matrial">
                                            <Grid Padding="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{x:Bind Name}" Foreground="White"/>
                                                <TextBlock Text="{x:Bind Stock}" Grid.Column="1" Foreground="White"/>
                                                <TextBlock Text="{x:Bind MinimumStock}" Grid.Column="2" Foreground="White"/>
                                                <TextBlock Text="{x:Bind NotificationSymbol}" Grid.Column="5" Foreground="{ x:Bind NotificationColor}"/>

                                                <Button
                                                    Content="+"
                                                    Grid.Column="6"
                                                    CornerRadius="6"
                                                    Padding="10,4"
                                                    Background="#FFD600"
                                                    Foreground="Black"
                                                    Click="OrderASpecificMatrial_Button"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ScrollViewer>

                            <Button
                                Content="Bestellen"
                                Width="120"
                                HorizontalAlignment="Right"
                                CornerRadius="6"
                                Background="#FFD600"
                                Foreground="Black"
                                Padding="10,4"/>
                        </StackPanel>
                    </Border>


                    <!-- SUPPLIER SHORTCUTS -->
                    <Border
                        Background="#111"
                        Padding="22"
                        CornerRadius="16"
                        BorderBrush="#333"
                        BorderThickness="1">

                        <StackPanel Spacing="16">
                            <TextBlock
                                Text="Snelkoppelingen leveranciers"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"/>

                            <ListView x:Name="DelivererListView">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Deliverer">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Button
                                                Content="{x:Bind Name}"
                                                Background="#333"
                                                Foreground="White"
                                                CornerRadius="6"
                                                Padding="10,4"/>

                                            <Button
                                                Content="+ Bestellen"
                                                Grid.Column="1"
                                                CornerRadius="6"
                                                Padding="10,4"
                                                Background="#FFD600"
                                                Foreground="Black"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </StackPanel>
                    </Border>

                </StackPanel>

            </Grid>
        </Grid>
    </ScrollViewer>

</Page>
