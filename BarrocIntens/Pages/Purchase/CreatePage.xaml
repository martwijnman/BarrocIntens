<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Purchase.CreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Purchase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer Width="900" HorizontalAlignment="Center">
            <StackPanel Spacing="24">

                <!-- Card -->
                <Border Background="White"
                    CornerRadius="12"
                    Padding="32"
                    Shadow="{ThemeResource ThemeShadow}">
                    <StackPanel Spacing="18">

                        <TextBlock Text="Create Product"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                        <TextBox x:Name="NameTextbox"
                         Header="Product Name"
                         PlaceholderText="e.g. Wickie IceMachine"
                         CornerRadius="8"/>

                        <TextBox x:Name="CategoryTextbox"
                         Header="Category"
                         PlaceholderText="e.g. IceCoffee"
                         CornerRadius="8"/>

                        <TextBox x:Name="PriceTextbox"
                         Header="Price (â‚¬)"
                         InputScope="Number"
                         PlaceholderText="249.99"
                         CornerRadius="8"/>

                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBox x:Name="StockTextbox"
                             Width="200"
                             Header="In Stock"
                             PlaceholderText="10"
                             InputScope="Number"
                             CornerRadius="8"/>

                            <TextBox x:Name="MinimumStockTextbox"
                             Width="200"
                             Header="Minimum Stock"
                             PlaceholderText="3"
                             InputScope="Number"
                             CornerRadius="8"/>
                        </StackPanel>

                        <TextBlock Text="Deliverer"
                               FontWeight="SemiBold"
                               FontSize="14"/>

                        <ComboBox x:Name="DelivererCombo"
                              PlaceholderText="Pick deliverer"
                              CornerRadius="8"
                              Width="300"/>

                        <TextBlock Text="Materials needed"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                        <StackPanel x:Name="MatrialSelector"
                                Background="#FBFBFB"
                                Padding="12"
                                CornerRadius="8"
                                BorderBrush="#CCC"
                                BorderThickness="1"/>

                        <TextBox x:Name="ImageTextbox"
                         Header="Product Image"
                         PlaceholderText="/Assets/Images/product.jpg"
                         CornerRadius="8"/>

                        <TextBlock x:Name="errorText"
                               Foreground="Red"
                               FontWeight="Bold"
                               Visibility="Collapsed"/>

                        <Button Click="CreateButton"
                            Content="Save Product"
                            Width="200"
                            HorizontalAlignment="Center"
                            CornerRadius="8"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="16"
                            Margin="0,20,0,0"
                            Padding="10,6"/>

                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
