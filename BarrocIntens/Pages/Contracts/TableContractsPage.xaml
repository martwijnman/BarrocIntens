<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Contracts.TableContractsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Contracts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="#1E1E1E">



        <TextBlock 
    x:Name="Greeting"
    FontSize="32"
    FontWeight="SemiBold"
    Margin="40"
    Foreground="White"/>

        <StackPanel Padding="5">

            <Button Grid.Row="0" Grid.Column="0"
            Width="150" Height="150"
            Margin="10"
            CornerRadius="16"
            Background="#2D2D2D"
            Foreground="White"
            Click="Button_Click">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                       Text="&#xE787;" FontSize="50"/>
                    <TextBlock Text="Contracten keuren" FontSize="17" Margin="0,10,0,0"/>
                </StackPanel>
            </Button>
            <Button Grid.Row="0" Grid.Column="1"
            Width="150" Height="150"
            Margin="10"
            CornerRadius="16"
            Background="#2D2D2D"
            Foreground="White"
            Click="Button_Click_1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                       Text="&#xE77B;" FontSize="50"/>
                    <TextBlock Text="Betalingsoverzicht" FontSize="17" Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

        </StackPanel>
    </StackPanel>
</Page>
