<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Contracts.TableContractsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Contracts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="Black">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">

            <!-- Contracten keuren -->
            <Button Width="150" Height="150"
                CornerRadius="16"
                Background="#2D2D2D"
                Foreground="White"
                Click="Button_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                           Text="&#xE787;" FontSize="50"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="Contracten keuren" FontSize="17"
                           Foreground="Yellow"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Betalingsoverzicht -->
            <Button Width="150" Height="150"
                CornerRadius="16"
                Background="#2D2D2D"
                Foreground="White"
                Click="Button_Click_1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe Fluent Icons"
                           Text="&#xE77B;" FontSize="50"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="Betalingsoverzicht" FontSize="17"
                           Foreground="Yellow"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Page>
