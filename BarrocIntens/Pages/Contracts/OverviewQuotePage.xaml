<Page
    x:Class="BarrocIntens.Pages.Contracts.OverviewQuotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:BarrocIntens.Data">

    <Grid Background="#1E1E1E" Padding="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Offertes overzicht"
            FontSize="32"
            FontWeight="SemiBold"
            Foreground="#FFD600"
            Margin="0,0,0,20"/>

        <ListView x:Name="QuoteListView"
                  Grid.Row="1"
                  Background="Transparent"
                  BorderThickness="0"
                  IsItemClickEnabled="True">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Quote">


                    <Border
                        Background="#2A2A2A"
                        CornerRadius="12"
                        Padding="15"
                        Margin="0,0,0,12"
                        BorderBrush="#333"
                        BorderThickness="1">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- INFO -->
                            <StackPanel>
                                <TextBlock
                                    Text="{Binding Customer.Name}"
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="SemiBold"/>

                                <TextBlock
                                    Text="{Binding CreatedAt}"
                                    Foreground="#AAAAAA"
                                    FontSize="12"/>
                            </StackPanel>

                            <TextBlock
                                Grid.Column="1"
                                Text="Items:"
                                Foreground="#AAAAAA"
                                VerticalAlignment="Center"/>

                            <TextBlock
                                Grid.Column="2"
                                Text="{Binding ItemsCount}"
                                Foreground="#FFD600"
                                FontWeight="Bold"
                                VerticalAlignment="Center"/>

                            <!-- ACTIES -->
                            <StackPanel
                                Grid.Column="3"
                                Orientation="Horizontal"
                                Spacing="8">

                                <Button
                                    Content="Details"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderBrush="White"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Click="Button_Click_2"/>

                                <Button
                                    Content="✔ Accepteren"
                                    Background="#FFD600"
                                    Foreground="Black"
                                    CornerRadius="8"
                                    Click="Button_Click"/>

                                <Button
                                    Content="✖ Weigeren"
                                    Background="Transparent"
                                    Foreground="#FFD600"
                                    BorderBrush="#FFD600"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Click="Button_Click_1"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
