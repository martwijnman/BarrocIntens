<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Customers.CreateCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Customers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="TextControlHeaderForeground" Color="White"/>

    </Page.Resources>
    <StackPanel Padding="80" Spacing="15" Background="Black">
        <TextBlock Foreground="White" FontSize="20">
            Maak een klant aan
        </TextBlock>
        <TextBox x:Name="NameTextBox"
                 Width="300"
                 Header="Naam:"></TextBox>

        <TextBox x:Name="EmailTextBox" 
                 Header="E-mail:"></TextBox>

        <TextBox x:Name="PhoneTextBox" 
                 Header="Telefeloonnummer:"></TextBox>
        <StackPanel Orientation="Horizontal" Spacing="170">
            <TextBox x:Name="CityTextBox"
                 Header="Stad:"></TextBox>

            <!--<CheckBox Foreground="Black" x:Name="BKRCheckBox">BKR keuring:</CheckBox>-->

            <NumberBox x:Name="BkrNumber"
                   Header="BKR nummer:"
            ></NumberBox>
        </StackPanel>

        <TextBlock x:Name="ErrorTextBlock" Foreground="red"></TextBlock>

        <TextBlock x:Name="CheckTextBlock" Foreground="green"></TextBlock>

        <Button Foreground="White" x:Name="SaveButton" Click="SaveButton_Click">Opslaan</Button>

    </StackPanel>
</Page>
