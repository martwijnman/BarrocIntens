<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Customers.CreateCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Customers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TITEL -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FFD600"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- SUBTITEL -->
        <Style x:Key="SubTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Margin" Value="0,0,0,25"/>
        </Style>

        <!-- INPUT -->
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD600"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- NUMBERBOX -->
        <Style TargetType="NumberBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD600"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- BUTTON -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFD600"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="200"/>
        </Style>

    </Page.Resources>

    <Grid Padding="80" Background="Black">
        <StackPanel Spacing="10">

            <!-- TITEL -->
            <TextBlock Text="Nieuwe klant"
                       Style="{StaticResource PageTitle}"/>

            <TextBlock Text="Vul de gegevens in om een klant aan te maken"
                       Style="{StaticResource SubTitle}"/>

            <!-- INPUTS -->
            <TextBox x:Name="NameTextBox"
                     Header="Naam"/>

            <TextBox x:Name="EmailTextBox"
                     Header="E-mail"/>

            <TextBox x:Name="PhoneTextBox"
                     Header="Telefoonnummer"/>

            <StackPanel Orientation="Horizontal" Spacing="20">
                <TextBox x:Name="CityTextBox"
                         Header="Stad"
                         Width="140"/>

                <NumberBox x:Name="BkrNumber"
                           Header="BKR nummer"
                           Width="140"/>
            </StackPanel>

            <!-- FEEDBACK -->
            <TextBlock x:Name="ErrorTextBlock"
                       Foreground="#FF4D4D"
                       FontWeight="SemiBold"
                       Margin="0,10,0,0"/>

            <TextBlock x:Name="CheckTextBlock"
                       Foreground="#4DFF88"
                       FontWeight="SemiBold"/>

            <Button x:Name="SaveButton"
                    Content="Klant opslaan"
                    Margin="0,25,0,0"
                    Click="SaveButton_Click"/>

        </StackPanel>
    </Grid>
</Page>
