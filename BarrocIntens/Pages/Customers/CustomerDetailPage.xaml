<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Customers.CustomerDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Customers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    Background="Black"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="50" Margin="30"  Width="750">
        <StackPanel>
            <Button x:Name="backButton" Click="backButton_Click">Terug naar Overzicht</Button>
            <TextBlock Foreground="Yellow" x:Name="CustomerNameTextBlock" FontSize="18" FontWeight="Bold" Text="Uniqlo" />
            <TextBlock Foreground="Yellow" x:Name="CustomerAddressTextBlock" Text="Lijnbaan 177, 3012 EN Rotterdam" />
            <TextBlock Foreground="Yellow" x:Name="CustomerEmailTextBlock" Text="rotterdam@uniqlo.com" />
            <TextBlock Foreground="Yellow" x:Name="CustomerPhoneTextBlock" Text="{Binding Phone}" />
            <TextBlock Foreground="Yellow" x:Name="CustomerCityTextBlock" Text="{Binding City}" />
            <TextBlock Foreground="Yellow" x:Name="CustomerBkrStatusTextBlock" Text="{Binding BkrStatus}" />
        
        </StackPanel>
        <StackPanel>
            
        
        <TextBlock Text="Lopende contracten" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10" />

        <ListView x:Name="FactureListView" IsItemClickEnabled="True" BorderBrush="Yellow" BorderThickness="1" Width="300">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Facture">
                    <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,5">
                        <!--<Image Source="{Binding ProfileImageUri}" Width="40" Height="40" />-->

            <Button x:Name="backButton"
                Content="â† Terug naar overzicht"
                Width="200"
                Padding="10,6"
                Background="#FFD600"
                Foreground="Black"
                FontWeight="SemiBold"
                CornerRadius="8"
                FontSize="14"
                Click="backButton_Click"/>

            <TextBlock x:Name="CustomerNameTextBlock"
                   Text="Uniqlo"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFD600"
                   Margin="0,15,0,5"/>

            <TextBlock x:Name="CustomerAddressTextBlock"
                   Text="Lijnbaan 177, 3012 EN Rotterdam"
                   Foreground="#CCCCCC"
                   FontSize="14"/>

            <TextBlock x:Name="CustomerEmailTextBlock"
                   Text="rotterdam@uniqlo.com"
                   Foreground="#CCCCCC"
                   FontSize="14"/>

            <TextBlock Text="{Binding Phone}"
                   Foreground="#CCCCCC"
                   FontSize="14"/>

            <TextBlock Text="{Binding City}"
                   Foreground="#CCCCCC"
                   FontSize="14"/>

            <TextBlock Text="{Binding BkrStatus}"
                   Foreground="#FFD600"
                   FontWeight="SemiBold"
                   FontSize="14"/>
        </StackPanel>

        <!-- CONTRACTS -->
        <StackPanel Spacing="12" Width="400">

            <TextBlock Text="Lopende contracten"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#FFD600"
                   Margin="0,0,0,12"/>

            <ListView x:Name="FactureListView"
                  Background="Transparent"
                  BorderThickness="0"
                  Width="400"
                  SelectionMode="None">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Facture">

                        <Border Background="#2A2A2A"
                            CornerRadius="14"
                            Padding="14"
                            Margin="0,0,0,12"
                            BorderBrush="#333"
                            BorderThickness="1"
                            PointerEntered="Contract_PointerEntered"
                            PointerExited="Contract_PointerExited">

                            <StackPanel Orientation="Horizontal" Spacing="24">
                                <TextBlock Text="{Binding Name}"
                                       Foreground="#FFD600"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>

                                <TextBlock Text="{Binding ContractDuring}"
                                       Foreground="White"
                                       FontSize="14"/>
                            </StackPanel>

                        </Border>

                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackPanel>

    </StackPanel>


</Page>
