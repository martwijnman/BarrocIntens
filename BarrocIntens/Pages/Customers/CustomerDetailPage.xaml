<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Customers.CustomerDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Customers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    Background="Black"
    mc:Ignorable="d">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Left: Customer Info -->
            <ColumnDefinition Width="*" />
            <!-- Right: Contracts -->
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: Customer Info -->
        <StackPanel Grid.Column="0" Spacing="10" Width="350">
            <Button x:Name="BackButton" Click="backButton_Click" Content="â† Terug naar overzicht" 
                    Padding="10,6" Background="#FFD600" Foreground="Black" FontWeight="SemiBold" CornerRadius="8"/>

            <TextBlock x:Name="CustomerNameTextBlock" Text="Uniqlo" FontSize="18" FontWeight="Bold" Foreground="#FFD600"/>
            <TextBlock x:Name="CustomerAddressTextBlock" Text="Lijnbaan 177, 3012 EN Rotterdam" Foreground="#FFD600"/>
            <TextBlock x:Name="CustomerEmailTextBlock" Text="rotterdam@uniqlo.com" Foreground="#FFD600"/>
            <TextBlock Text="{Binding Phone}" Foreground="#FFD600"/>
            <TextBlock Text="{Binding City}" Foreground="#FFD600"/>
            <TextBlock Text="{Binding BkrStatus}" Foreground="#FFD600" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- RIGHT COLUMN: Contracts -->
        <StackPanel Grid.Column="1" Spacing="12" Width="400">
            <TextBlock Text="Lopende contracten" FontSize="20" FontWeight="SemiBold" Foreground="#FFD600" Margin="0,0,0,12"/>

            <ListView x:Name="FactureListView"
                      Background="Transparent"
                      BorderThickness="0"
                      Width="400"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Facture">
                        <Border Background="#2A2A2A"
                                CornerRadius="14"
                                Padding="14"
                                Margin="0,0,0,12"
                                BorderBrush="#333"
                                BorderThickness="1"
                            >
                            <StackPanel Orientation="Horizontal" Spacing="24">
                                <TextBlock Text="{Binding Name}" Foreground="#FFD600" FontWeight="SemiBold" FontSize="16"/>
                                <TextBlock Text="{Binding ContractDuring}" Foreground="White" FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </Grid>
</Page>
