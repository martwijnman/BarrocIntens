<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Customers.CustomerDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    mc:Ignorable="d"
    Background="Black">

    <StackPanel Orientation="Horizontal"
                Spacing="50"
                Margin="30"
                Width="900">

        <!-- CUSTOMER INFO -->
        <StackPanel Width="350" Spacing="10">

            <Button x:Name="BackButton"
                    Content="â† Terug naar overzicht"
                    Width="220"
                    Padding="10,6"
                    Background="#FFD600"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    CornerRadius="8"
                    Click="backButton_Click"/>

            <TextBlock x:Name="CustomerNameTextBlock"
                       Text="Uniqlo"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FFD600"
                       Margin="0,15,0,5"/>

            <TextBlock x:Name="CustomerAddressTextBlock"
                       Text="Lijnbaan 177, 3012 EN Rotterdam"
                       Foreground="#CCCCCC"
                       FontSize="14"/>

            <TextBlock x:Name="CustomerEmailTextBlock"
                       Text="rotterdam@uniqlo.com"
                       Foreground="#CCCCCC"
                       FontSize="14"/>

            <TextBlock x:Name="CustomerPhoneTextBlock"
                       Text="{Binding Phone}"
                       Foreground="#CCCCCC"
                       FontSize="14"/>

            <TextBlock x:Name="CustomerCityTextBlock"
                       Text="{Binding City}"
                       Foreground="#CCCCCC"
                       FontSize="14"/>

            <TextBlock x:Name="CustomerBkrStatusTextBlock"
                       Text="{Binding BkrStatus}"
                       Foreground="#FFD600"
                       FontWeight="SemiBold"
                       FontSize="14"/>
        </StackPanel>

        <!-- CONTRACTS -->
        <StackPanel Width="450" Spacing="12">

            <TextBlock Text="Lopende contracten"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FFD600"
                       Margin="0,0,0,12"/>

            <ListView x:Name="FactureListView"
                      Background="Transparent"
                      BorderThickness="0"
                      SelectionMode="None">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Facture">
                        <Border Background="#2A2A2A"
                                CornerRadius="14"
                                Padding="14"
                                Margin="0,0,0,12"
                                BorderBrush="#333"
                                BorderThickness="1">

                            <StackPanel Orientation="Horizontal" Spacing="24">

                                <TextBlock Text="{Binding Name}"
                                           Foreground="#FFD600"
                                           FontWeight="SemiBold"
                                           FontSize="16"/>

                                <TextBlock Text="{Binding ContractDuring}"
                                           Foreground="White"
                                           FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </StackPanel>
</Page>
