<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.EmployeesCreation.employeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.EmployeesCreation"
    xmlns:localData="using:BarrocIntens.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Stackpanel for the search bars that you can search on for their name or department-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Spacing="10" Margin="5">
            <TextBox x:Name="employeesNameSearchTextBox" 
      PlaceholderText="Zoek op naam..."
      Width="200"
      TextChanged="employeesNameSearchTextBox_TextChanged"/>
            <TextBox x:Name="departmentSearchTextBox" 
      PlaceholderText="Zoek op afdeling..."
      Width="200"
      TextChanged="departmentSearchTextBox_TextChanged"/>
        </StackPanel>

        <ListView x:Name="employeesListView" Grid.Row="1" IsItemClickEnabled="True" ItemClick="employeesListView_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="localData:Employee">
                    <StackPanel Spacing="10" Padding="20">
                        <TextBlock>
                    <Run>(#</Run>
                    <Run Text="{x:Bind Id}" />
                    <Run Text="{x:Bind Name}" />
                    <Run>)</Run>
                        </TextBlock>
                        <TextBlock Text="{x:Bind Email}" />
                        <TextBlock Text="{x:Bind PhoneNumber}" />
                        <TextBlock Text="{x:Bind City}" />
                        <TextBlock Text="{x:Bind Department}" />
                        <Button x:Name="UpdateButton" Click="UpdateButton_Click">
                            <FontIcon FontFamily="Segoe Fluent Icons" FontWeight="Bold" Glyph="&#xE104;" />
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
