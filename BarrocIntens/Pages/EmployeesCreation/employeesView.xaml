<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.EmployeesCreation.employeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.EmployeesCreation"
    xmlns:localData="using:BarrocIntens.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#0B0B0B"
      Padding="28">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SEARCH / FILTER BAR -->
        <Border Background="#141414"
            CornerRadius="16"
            Padding="16"
            Margin="0,0,0,20">
            <!--<StackPanel>
                <TextBlock Text="Medewerkers"
                   FontSize="32"
                   FontWeight="SemiBold"
                   Foreground="#FFD600"/>
            </StackPanel>-->

            <StackPanel Orientation="Horizontal"
                    Spacing="14">


                <TextBox x:Name="employeesNameSearchTextBox"
                     PlaceholderText="Zoek op naam"
                     Width="220"
                     Background="#0F0F0F"
                     Foreground="White"
                     BorderBrush="#2A2A2A"
                     BorderThickness="1"
                     CornerRadius="10"
                     Padding="10,6"
                     TextChanged="employeesNameSearchTextBox_TextChanged"/>

                <TextBox x:Name="departmentSearchTextBox"
                     PlaceholderText="Zoek op afdeling"
                     Width="220"
                     Background="#0F0F0F"
                     Foreground="White"
                     BorderBrush="#2A2A2A"
                     BorderThickness="1"
                     CornerRadius="10"
                     Padding="10,6"
                     TextChanged="departmentSearchTextBox_TextChanged"/>

                <Button x:Name="CreateButton" Content="+" Click="CreateButton_Click" Background="Yellow" Foreground="Black" Padding="10" Margin="10" ></Button>
            </StackPanel>
        </Border>

        <!-- EMPLOYEE LIST -->
        <ListView x:Name="employeesListView"
              Grid.Row="1"
              Background="Transparent"
              BorderThickness="0"
              SelectionMode="Single"
              IsItemClickEnabled="True"
              ItemClick="employeesListView_ItemClick">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,0,0,16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="localData:Employee">

                    <!-- CARD -->
                    <Border Background="#141414"
                        CornerRadius="18"
                        Padding="18">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- LEFT: MAIN INFO -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="{x:Bind Name}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>

                                <TextBlock Text="{x:Bind Email}"
                                       FontSize="13"
                                       Foreground="#9A9A9A"/>

                                <TextBlock Text="{x:Bind PhoneNumber}"
                                       FontSize="13"
                                       Foreground="#9A9A9A"/>
                            </StackPanel>

                            <!-- MIDDLE: META -->
                            <StackPanel Grid.Column="1"
                                    Spacing="6">
                                <TextBlock Text="{x:Bind City}"
                                       FontSize="13"
                                       Foreground="#9A9A9A"/>

                                <Border Background="#0F0F0F"
                                    BorderBrush="#2A2A2A"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="6,2"
                                    HorizontalAlignment="Left">

                                    <TextBlock Text="{x:Bind Department}"
                                           FontSize="12"
                                           Foreground="#FFD600"/>
                                </Border>
                            </StackPanel>

                            <!-- ACTION -->
                            <Button Grid.Column="2"
                                Width="42"
                                Height="42"
                                Background="#FFD600"
                                Foreground="Black"
                                CornerRadius="10"
                                Click="UpdateButton_Click">

                                <FontIcon FontFamily="Segoe Fluent Icons"
                                      Glyph="&#xE104;"
                                      FontSize="16"/>
                            </Button>

                        </Grid>

                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </Grid>

</Page>
