<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.EmployeesCreation.EmployeesDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.EmployeesCreation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Black"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="25" Margin="30"  Width="750" BorderBrush="Yellow">
            <Button x:Name="backButton"
         Click="backButton_Click">Terug naar Overzicht</Button>
            <TextBlock Foreground="Yellow" x:Name="employeeNameTextBlock"/>
            <TextBlock Foreground="Yellow" x:Name="employeeEmailTextBlock"/>
            <TextBlock Foreground="Yellow" x:Name="EmployeePhoneTextBlock"/>
            <TextBlock Foreground="Yellow" x:Name="EmployeeCityTextBlock"/>
            <TextBlock Foreground="Yellow" x:Name="EmployeeDepartmentTextBlock"/>
            <TextBlock Foreground="Yellow" x:Name="EmployeeTasksTextBlock"/>
        </StackPanel>
    </Grid>
</Page>
