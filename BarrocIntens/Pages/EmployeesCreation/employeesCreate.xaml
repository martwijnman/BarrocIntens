<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.EmployeesCreation.employeesCreate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.EmployeesCreation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FFD600"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Margin" Value="0,0,0,25"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD600"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD600"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD600"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFD600"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Page.Resources>

    <Grid Padding="80" Background="Black">
        <ScrollViewer>
            
            <StackPanel Spacing="10">

                <Button x:Name="backButton"
Click="backButton_Click"  Background="Yellow" Foreground="Black">Terug naar Overzicht</Button>
                <TextBlock Text="Nieuwe Medewerker"
                           Style="{StaticResource PageTitle}"/>

                <TextBlock Text="Vul de gegevens in om een nieuwe medewerker te registreren"
                           Style="{StaticResource SubTitle}"/>

                <TextBox x:Name="employeeNameTextBox" Header="Volledige Naam"/>

                <TextBox x:Name="employeeEmailTextBox" Header="E-mailadres"/>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox x:Name="employeePhoneTextBox" Header="Telefoonnummer" Width="145"/>
                    <TextBox x:Name="employeeCityTextBox" Header="Stad" Width="145"/>
                </StackPanel>

                <ComboBox x:Name="employeeDepartmentComboBox"
                  Header="Afdeling"
                  DisplayMemberPath="Name" 
                  SelectedValuePath="Id" />

                <TextBlock Text="Wachtwoord" Foreground="White" FontSize="12" Margin="0,10,0,0"/>
                <Grid Width="300" HorizontalAlignment="Left">
                    <PasswordBox x:Name="generatePasswordBox" 
                                 PasswordChanged="PasswordHiddenBox_PasswordChanged"
                                 PlaceholderText="Wachtwoord"/>
                    <TextBox x:Name="passwordVisibleBox"
                             Visibility="Collapsed"
                             TextChanged="PasswordVisibleBox_TextChanged"/>
                    <Button Padding="0,0,0,10"
                        x:Name="togglePasswordButton"
                            Content="ðŸ‘"
                            Click="TogglePasswordVisibility_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            Width="40"
                            BorderThickness="0"/>
                </Grid>

                <Button Content="Genereer Wachtwoord" 
                        Click="GeneratePassword_Click" 
                        FontSize="12" Width="150" Height="32" Padding="5"/>

                <TextBlock x:Name="ErrorTextBlock" Foreground="#FF4D4D" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <TextBlock x:Name="CheckTextBlock" Foreground="#4DFF88" FontWeight="SemiBold"/>

                <Button x:Name="SaveButton"
                        Content="Medewerker opslaan"
                        Width="300"
                        Margin="0,25,0,0"
                        Click="SaveButton_Click"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>