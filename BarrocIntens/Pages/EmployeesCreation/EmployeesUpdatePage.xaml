<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.EmployeesCreation.EmployeesUpdatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.EmployeesCreation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>

            <!-- TITEL -->
            <Style x:Key="PageTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#FFD600"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <!-- SUBTITEL -->
            <Style x:Key="SubTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#AAAAAA"/>
                <Setter Property="Margin" Value="0,0,0,25"/>
            </Style>

            <!-- INPUT -->
            <Style TargetType="TextBox">
                <Setter Property="Width" Value="300"/>
                <Setter Property="Background" Value="#2A2A2A"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#FFD600"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <!-- PASSWORDBOX -->
            <Style TargetType="PasswordBox">
                <Setter Property="Width" Value="300"/>
                <Setter Property="Background" Value="#2A2A2A"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#FFD600"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <!-- COMBOBOX -->
            <Style TargetType="ComboBox">
                <Setter Property="Width" Value="300"/>
                <Setter Property="Background" Value="#2A2A2A"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#FFD600"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <!-- BUTTON -->
            <Style TargetType="Button">
                <Setter Property="Background" Value="#FFD600"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="14,8"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Width" Value="200"/>
            </Style>

        </Page.Resources>

    <Grid Padding="80" Background="Black">
        <StackPanel Spacing="10">
            <Button x:Name="backButton"
Click="backButton_Click"  Background="Yellow" Foreground="Black">Terug naar Overzicht</Button>
            <!-- TITEL -->
            <TextBlock Text="Nieuwe medewerker"
                       Style="{StaticResource PageTitle}"/>

            <TextBlock Text="Vul de gegevens in om een medewerker aan te maken"
                       Style="{StaticResource SubTitle}"/>

            <!-- INPUTS -->
            <TextBox x:Name="employeeNameTextBox" Header="Naam"/>
            <TextBox x:Name="employeeEmailTextBox" Header="Email"/>
            <PasswordBox x:Name="generatePasswordBox" Header="Wachtwoord"
                         PasswordChanged="PasswordHiddenBox_PasswordChanged"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:Name="passwordVisibleBox" Header="Wachtwoord zichtbaar"
                         Width="200" Visibility="Collapsed"
                         TextChanged="PasswordVisibleBox_TextChanged"/>
                <Button x:Name="togglePasswordButton"
                        Content="ðŸ‘"
                        Click="TogglePasswordVisibility_Click"/>
            </StackPanel>

            <TextBox x:Name="employeePhoneTextBox" Header="Telefoonnummer"/>
            <TextBox x:Name="employeeCityTextBox" Header="Stad"/>

            <ComboBox x:Name="employeeDepartmentComboBox" Header="Afdeling">
                <ComboBoxItem Content="Sales"/>
                <ComboBoxItem Content="Purchasing"/>
                <ComboBoxItem Content="Maintenance"/>
                <ComboBoxItem Content="Finance"/>
                <ComboBoxItem Content="Planning"/>
            </ComboBox>

            <!-- FEEDBACK -->
            <TextBlock x:Name="ErrorTextBlock"
                       Foreground="#FF4D4D"
                       FontWeight="SemiBold"
                       Margin="0,10,0,0"/>
            <TextBlock x:Name="CheckTextBlock"
                       Foreground="#4DFF88"
                       FontWeight="SemiBold"/>

            <!-- ACTION BUTTONS -->
            <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,25,0,0">
                <Button x:Name="DeleteButton" Content="Verwijderen" Background="Red" Foreground="White"/>
                <Button x:Name="SaveButton" Content="Opslaan" Click="SaveButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>

</Page>
