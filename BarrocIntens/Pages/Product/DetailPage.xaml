<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Product.DetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="MainGrid" Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Product Image -->
        <Border x:Name="ImageBorder" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Grid.Column="0" Margin="0,0,20,0">
            <Image x:Name="ProductImage" Stretch="UniformToFill" Width="500"/>
        </Border>

        <!-- Product Details -->
        <StackPanel Grid.Column="1" Spacing="10">
            <TextBlock x:Name="NameText" FontSize="28" FontWeight="Bold"/>
            <TextBlock x:Name="CategoryText" FontSize="18" Foreground="Gray"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Price:" FontWeight="SemiBold"/>
                <TextBlock x:Name="PriceText"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Stock:" FontWeight="SemiBold"/>
                <TextBlock x:Name="StockText"/>
                <TextBlock x:Name="MinimumStockText" Foreground="Gray"/>
            </StackPanel>

            <TextBlock x:Name="StockWarning" Text="Low stock!" Foreground="OrangeRed" FontWeight="Bold" Visibility="Collapsed"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Deliverer:" FontWeight="SemiBold"/>
                <TextBlock x:Name="DelivererText"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Type:" FontWeight="SemiBold"/>
                <TextBlock x:Name="IsMachineText"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Notify when out of stock:" FontWeight="SemiBold"/>
                <TextBlock x:Name="NotificationText"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Matrialen:" FontWeight="SemiBold"/>
            </StackPanel>
            <ItemsControl x:Name="MaterialsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid MaximumRowsOrColumns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="8" BorderThickness="1" Padding="8" Margin="5"
                    BorderBrush="Yellow" Background="Black">
                            <StackPanel Width="120" Spacing="6">

                                <TextBlock Text="{Binding Name}" 
                               FontSize="14" FontWeight="SemiBold"
                               TextWrapping="Wrap" HorizontalAlignment="Center"/>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Edit Product" Width="150" HorizontalAlignment="Left" Margin="0,20,0,0" Click="EditProduct_Click"/>
            <Button Click="GoBack_Button" Width="150">
                Terug
            </Button>
        </StackPanel>

    </Grid>
</Page>
