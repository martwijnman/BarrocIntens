<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.Pages.Product.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.Pages.Product"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BarrocIntens.Data"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">

        <!--TODO: Make the filters work-->
        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="StockCheckbox"
                  PlaceholderText="Type selecteren"
                  Width="200"
                  Margin="0,0,10,0">
                <x:String>Op voorraad</x:String>
                <x:String>Niet op voorraad</x:String>
            </ComboBox>

            <TextBox x:Name="ProductSearchTextbox"
                 PlaceholderText="Zoek product..."
                 Width="300"/>
            <Button Content="Order Products" Click="GoToOrder"  />
        </StackPanel>


        <!-- Product Grid -->
        <ListView ItemsSource="{Binding}"
              IsItemClickEnabled="True"
              SelectionMode="None"
              x:Name="ProductView"
              Margin="20">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"
                               MaximumRowsOrColumns="4"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Grid Width="220" Height="500">
                        <Border Background="Black"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="Black">
                            <StackPanel Spacing="8" Padding="12">

                                <Image Source="{x:Bind ImagePath}"
                                   Height="140"
                                   Stretch="UniformToFill"/>

                                <TextBlock Text="{x:Bind Name}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       MaxLines="2"/>

                                <TextBlock Text="{x:Bind Price}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="Yellow"/>

                                <TextBlock x:Name="TimesSelected"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="Yellow">
                                    <!--<TextBlock.RenderTransform>
                                        <ScaleTransform x:Name="PopScale" ScaleX="1" ScaleY="1"/>
                                    </TextBlock.RenderTransform>-->
                                </TextBlock>


                                <Border Background="#222"
                                    Padding="4,2"
                                    CornerRadius="6"
                                    HorizontalAlignment="Left">
                                    <TextBlock Text="{x:Bind Stock}"
                                           FontSize="12"
                                           Foreground="White"/>
                                </Border>

                                <Button Content="Detail"
                                    HorizontalAlignment="Left"
                                    Width="100"
                                    Background="Yellow"
                                    Foreground="Black"
                                    Click="ProductClick"
                                    CornerRadius="6"/>
                                
                                <Button Content="+" 
                                    HorizontalAlignment="Right"
                                    Width="50"
                                    Background="Yellow"
                                    Foreground="Black"
                                    CornerRadius="6"
                                    Click="PlusClick"/>
                                
                                <Button Content="-" 
                                    Width="50"
                                    Background="Yellow"
                                    Foreground="Black"
                                    CornerRadius="6"
                                    Click="MinClick"/>
                                
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </StackPanel>


</Page>
